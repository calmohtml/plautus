<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlautUs</title>
    <!-- CSS -->
    <link rel="stylesheet" href="../css/styles.css">
    <!-- Ubuntu + Fauna One fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Fauna+One&family=Ubuntu:wght@400&display=swap"
        rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
</head>

<body>
    <%- include('partials/navbar') %>
    <div class="login-container">
        <div class="login-wrapper">
            <form class="login-form" action="/users/register" method="POST">
                <div class="login-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <h2>
                    Registrate
                </h2>
                <% if (typeof errors != "undefined") { %>
                    <% errors.forEach(error => { %>
                     <h3><%= error.msg %></h3>
                      <% }) %>
                    <% } %>
                <div class="login-input">
                    <div class="login-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div>
                        <h5>Nombre completo</h5>
                        <input name="name" type="text" class="login">
                    </div>
                </div>
                <div class="login-input">
                    <div class="login-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div>
                        <h5>Email</h5>
                        <input name="email" type="email" class="login">
                    </div>
                </div>
                <div class="login-input">
                    <div class="login-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div>
                        <h5>Contraseña</h5>
                        <input name="password" type="password" class="login">
                    </div>
                </div>
                <div class="login-input">
                    <div class="login-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div>
                        <h5>Repetir contraseña</h5>
                        <input name="repeatpassword" type="password" class="login">
                    </div>
                </div>
                <div class="login-action">
                    <button class="login-button">
                        Registrar
                    </button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="js/main.js"></script>
</body>

</html>